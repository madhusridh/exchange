package com.client.receiver;

import org.springframework.amqp.core.Message;
import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.context.annotation.Configuration;
/**
 * This service class listens to messages in multiple queues and takes action accordingly 
 * @author madhu
 *
 */
@Configuration
public class EventHandlerServiceImpl implements EventHandlerService{
	/**
	 * This method listens to the email queue and triggers email service
	 * @param message
	 */
	
	@RabbitListener(queues="email")
	public void listenEvent(Message message) {
		System.out.println("Listened to message " + message);
	}

}
